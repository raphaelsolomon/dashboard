<%- include('./include/header.ejs') %>

<div class="main-container">
    <div class="xs-pd-20-10 pd-ltr-20">
        <div class="card-box pd-20 height-100-p mb-30">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <img src="vendors/images/banner-img.png" alt=""/>
                </div>
                <div class="col-md-8">
                    <h4 class="font-20 weight-500 mb-10 text-capitalize">
                        Welcome back
                        <div class="weight-600 font-30 text-blue"><%= user.contact_person %></div>
                    </h4>
                    <p class="font-18 max-width-600">
                        This platform helps you easily record your audit findings, ensuring your inputs are saved.
                                    Good luck!
                    </p>
                </div>
            </div>
        </div>
        <div class="title pb-20">
            <h2 class="h3 mb-0">Auditors Overview</h2>
        </div>

        <div class="row pb-10">
            <div class="col-xl-3 col-lg-3 col-md-6 mb-20">
                <div class="card-box height-100-p widget-style3">
                    <div class="d-flex flex-wrap">
                        <div class="widget-data">
                            <div class="weight-700 font-24 text-dark">75</div>
                            <div class="font-14 text-secondary weight-500">
                                Banks Audited</div>
                        </div>
                        <div class="widget-icon">
                            <div class="icon" data-color="#00eccf">
                                <i class=""></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-6 mb-20">
                <div class="card-box height-100-p widget-style3">
                    <div class="d-flex flex-wrap">
                        <div class="widget-data">
                            <div class="weight-700 font-24 text-dark">124,551</div>
                            <div class="font-14 text-secondary weight-500">
                                Completed Audit Report</div>
                        </div>
                        <div class="widget-icon">
                            <div class="icon" data-color="#ff5b5b">
                                <span class=""></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-6 mb-20">
                <div class="card-box height-100-p widget-style3">
                    <div class="d-flex flex-wrap">
                        <div class="widget-data">
                            <div class="weight-700 font-24 text-dark">400</div>
                            <div class="font-14 text-secondary weight-500">
                                Assigned Banks
                            </div>
                        </div>
                        <div class="widget-icon">
                            <div class="icon">
                                <i class="" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-6 mb-20">
                <div class="card-box height-100-p widget-style3">
                    <div class="d-flex flex-wrap">
                        <div class="widget-data">
                            <div class="weight-700 font-24 text-dark">5000</div>
                            <div class="font-14 text-secondary weight-500">Audit progress
                            </div>
                        </div>
                        <div class="widget-icon">
                            <div class="icon" data-color="#09cc06">
                                <i class="" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-box pb-10">
            <div class="h5 pd-20 mb-0">Audit Table</div>
            <table class="data-table table nowrap">
                <thead>
                    <tr>
                        <th class="table-plus">Date of bank audit</th>
                        <th>Name of bank</th>
                        <th>Branch location</th>
                        <th>Time of audit completed</th>
                        <th class="datatable-nosort">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% bank_audit.forEach(function(elem) { %>
                    <tr>
                        <td><%= elem.date_safety_audit %></td>
                        <td><%= elem.safety_audit_report_for %></td>
                        <td><%= elem.bank_full_address %></td>
                        <td><%= elem.createdAt %></td>
                        <td>
                            <div class="table-actions">
                                <a href="#" data-color="#e95959">
                                    <i class="icon-copy dw dw dw-eye"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="title pb-20 pt-20">
            <h2 class="h3 mb-0"></h2>
        </div>
        <div class="footer-wrap pd-20 mb-20 card-box">
            Auditor | copyright - 2023
            <a href="https://github.com/dropways" target="_blank">dech</a>
        </div>
    </div>
</div>

