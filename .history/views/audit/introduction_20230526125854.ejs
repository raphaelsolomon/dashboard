
<%- include('./include/header.ejs') %>
	<div class="main-container">
		<div class="xs-pd-20-10 pd-ltr-20">
			
			<!-- horizontal Basic Forms Start -->
			<div class="pd-20 card-box mb-30">
				<div class="clearfix">
					<div class="pull-left">
						<h4 class="text-blue h4">Introduction</h4>
						<p class="mb-30">Bank Safety Audit Portal</p>
					</div>
					 
				</div>
				<form id="bank_audit" class="introduction">
					<div class="form-group">
						<label>Date of safety audit </label>
						<input class="form-control" name="Date_safety_audit "  type="date" placeholder="" />
					</div>
					<div class="form-group">
						<label>Safety audit report for? </label>
						<input class="form-control" name="Safety_audit_report_for " value="" type="text" placeholder="Bank name" />
					</div>
					<div class="form-group">
						<label>Bank full address </label>
						<input class="form-control" name="bank_full_address" value="" type="text" />
					</div>
					<div class="form-group">
						<label>Name of safety auditor I </label>
						<input class="form-control" name="name_safety_audit_1" value="" type="text" />
					</div>
					<div class="form-group">
						<label>Name of safety auditor II</label>
						<input class="form-control"  name="name_safety_audit_2" value="" type="text" />
					</div>
					<div class="form-group">
						<label>Name of bank assessment participant</label>
						<input class="form-control"  name="name_bank_assessment_participant" value="" type="text" />
					</div>
					<div class="form-group">
						<label>Position of bank assessment participant </label>
						<input class="form-control" name="position_bank_assessment_participant" value="" type="text" />
					</div>
 
				</form>
			</div>

			
	
			<!-- horizontal Basic Forms End -->


			<div class="title pb-20 pt-20">
				<h2 class="h3 mb-0"> Executive Summary </h2>
			</div>

			<!-- horizontal Basic Forms Start -->
			<div class="pd-20 card-box mb-30">
				<div class="clearfix">
					
				</div>
				<form id="executive_summary" class="introduction">
					<div class="form-group">
						<label>Who is designated to handle Health, Safety, and Environment in the branch?  </label>
						<input class="form-control" name="designated_handler" type="text" placeholder="" />
					</div>

					<div class="form-group">
						<label>How many HSE personnel on ground?  </label>
						<input class="form-control" name="hse_personel_on ground" value="" type="text" />
					</div>

					<div class="form-group">
                        <label>Is the safety policy posted around the facility? </label>
                        <select class="custom-select2 form-control" name="state_policy" style="width: 100%; height: 38px">
                                <option value="">Select</option>
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                        </select>
                    </div>

					<div class="form-group">
                        <label>Are there enough fire extinguishers in the facility?  </label>
                        <select class="custom-select2 form-control" name="fire_extinguishers" style="width: 100%; height: 38px">
                                <option value="">Select</option>
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                        </select>
                    </div>

					<div class="form-group">
						<label>What major safety concern does the branch have?  </label>
						<input class="form-control" name="safety_concern" value="" type="text" />
					</div>

					<div>
					<a href="section1.html" onclick="submit()"><button type="button" class="btn btn-primary">Next</button></a>
					</div>
					 
				</form>

			</div>
			<!-- horizontal Basic Forms End -->



