<%- include('../includes/header.ejs') %>
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">FORT HERMON - DASHBOARD</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Daily HSE Report Form
                </li>
            </ol>


            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>WATER AND OIL RECORD (RECEIVED)
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Date</th>
                                <th>Contractor Name</th>
                                <th>Job Description</th>
                                <th>Total Manhours</th>
                                <th>Job Status</th>]
                                <th>Comments</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% contractor.forEach((e)=> { %>
                                <tr>
                                    <td><%= e.id %></td>
                                    <td><%= e.date %></td>
                                    <td><%= e.contractor_name %></td>
                                    <td><%= e.job_desc %></td>
                                    <td><%= e.total_manhours %></td>
                                    <td><%= e.jobstatus %></td>
                                    <td><%= e.comment %></td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    <%- include('../includes/footer.ejs') %>