<%- include('../includes/header.ejs') %>

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">Add data</div>
                            <div class="card-body">
                                <div class="card-title">
                                    <h3 class="text-center title-2">DATA CAPTURING FOR COMMODITY SALES</h3>
                                </div>
                                <hr>
                                <form action="/add" method="post" novalidate="novalidate">

                                    <div class="form-group">
                                        <label for="Purchased date" class="control-label mb-1">Purchased Date</label>
                                        <input id="purchased_date" name="purchased_date" type="date"
                                            class="form-control" aria-required="true" aria-invalid="false">
                                    </div>

                                    <div class="form-group">
                                        <label for="purchased Cost" class="control-label mb-1">Purchased Cost</label>
                                        <input id="purchased_cost" name="purchased_cost" type="number"
                                            class="form-control" aria-required="true" aria-invalid="false">
                                    </div>


                                    <div class="form-group">
                                        <label for="customer Name" class="control-label mb-1">Customer Name</label>
                                        <input id="customer_name" name="customer_name" type="text" class="form-control"
                                            aria-required="true" aria-invalid="false">
                                    </div>



                                    <div class="form-group">
                                        <label for="phone No" class="control-label mb-1">Phone Number</label>
                                        <input id="phone_no" name="phone_no" type="number" class="form-control"
                                            aria-required="true" aria-invalid="false">
                                    </div>

                                    <div class="form-group">
                                        <label for="commodity" class="control-label mb-1">Commodity</label>
                                        <input id="commodity" name="commodity" type="text" class="form-control"
                                            aria-required="true" aria-invalid="false">
                                    </div>

                                    <div class="form">
                                        <div class="col col-md-3">
                                            <label for="select" class=" form-control-label">Plastics Size</label>
                                        </div>

                                        <select name="plastic_size" id="select" class="form-control" required>
                                            <option value="750">750</option>
                                            <option value="50">50</option>
                                            <option value="60">60</option>
                                            <option value="40">40</option>
                                            <option value="75">75</option>
                                            <option value="450">450</option>
                                            <option value="360">360</option>
                                            <option value="350">350</option>
                                            <option value="300">500</option>
                                            <option value="35">35</option>
                                            <option value="45">45</option>
                                            <option value="1.5">1.5</option>
                                            <option value="30">30</option>
                                            <option value="33">33</option>
                                            <option value="70">70</option>
                                            <option value="78">78</option>
                                            <option value="0.75">0.75</option>
                                            <option value="400">400</option>
                                            <option value="330">330</option>
                                            <option value="150">150</option>
                                            <option value="1">1</option>
                                            <option value="85">85</option>
                                            <option value="473">473</option>
                                            <option value="600">600</option>
                                            <option value="720">720</option>
                                            <option value="250">250</option>
                                            <option value="525">525</option>
                                            <option value="100">100</option>
                                            <option value="55">55</option>
                                            <option value="591">591</option>
                                            <option value="72">72</option>
                                            <option value="90">90</option>
                                            <option value="20">20</option>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label for="commodity color" class="control-label mb-1">Commodity Color</label>
                                        <input id="commodity_color" name="commodity_color" type="text"
                                            class="form-control" aria-required="true" aria-invalid="false">
                                    </div>

                                    <div class="form-group">
                                        <label for="sales date" class="control-label mb-1">Sales Date</label>
                                        <input id="sales_date" name="sales_date" type="date" class="form-control"
                                            aria-required="true" aria-invalid="false">
                                    </div>

                                    <div class="form-group">
                                        <label for="sales cost" class="control-label mb-1">Sales Cost</label>
                                        <input id="sales_cost" name="sales_cost" type="number" class="form-control"
                                            aria-required="true" aria-invalid="false">
                                    </div>

                                    <div class="form-group">
                                        <label for="purchasing gender" class="control-label mb-1">Purchasing
                                            Gender</label>
                                        <input id="purchasing_gender" name="purchasing_gender" type="text"
                                            class="form-control" aria-required="true" aria-invalid="false">
                                    </div>

                                    <div class="form-group">
                                        <label for="mode payment" class="control-label mb-1">Mode of Payment</label>
                                        <input id="mode_payment" name="mode_payment" type="time" class="form-control"
                                            aria-required="true" aria-invalid="false">
                                    </div>

                                    <div class="form-group">
                                        <label for="delivery location" class="control-label mb-1">Delivery
                                            Location</label>
                                        <input id="delivery_location" name="delivery_location" type="text"
                                            class="form-control" aria-required="true" aria-invalid="false">
                                    </div>

                                    <div class="form-group">
                                        <label for="mode transaction" class="control-label mb-1">Mode of
                                            Transaction</label>
                                        <input id="mode_transaction" name="mode_transaction" type="text"
                                            class="form-control" aria-required="true" aria-invalid="false">
                                    </div>

                                    <div class="form-group">
                                        <label for="advertising medium" class="control-label mb-1">Advertising
                                            Medium</label>
                                        <input id="advertising_medium" name="advertising_medium" type="text"
                                            class="form-control" aria-required="true" aria-invalid="false">
                                    </div>

                                    <div class="form-group">
                                        <label for="status" class="control-label mb-1">Staus</label>
                                        <input id="status" name="status" type="text" class="form-control"
                                            aria-required="true" aria-invalid="false">
                                    </div>

                                    <div>
                                        <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                            <i class="fa fa-lock fa-lg"></i>&nbsp;
                                            <span id="payment-button-amount">Add data</span>
                                            <span id="payment-button-sending" style="display:none;">Sending…</span>
                                        </button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="copyright">
