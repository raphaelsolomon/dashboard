<%- include('../includes/header.ejs') %>

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">Edit data</div>
                            <div class="card-body">
                                <div class="card-title">
                                    <h3 class="text-center title-2">UPDATE COMMODITY DATA</h3>
                                </div>
                                <hr>
                                <form action="/details/<%=commodity.id%>" method="post">                                    
                                        <input name="id" type="hidden" value="<%= commodity.id %>" />
                                        <div class="form-group">
                                            <label for="Purchased date" class="control-label mb-1">Purchased Date</label>
                                            <input id="purchased_date" name="purchased_date" type="date" value="<%= commodity.purchased_date %>"
                                                class="form-control" aria-required="true" aria-invalid="false">
                                        </div>
    
                                        <div class="form-group">
                                            <label for="purchased Cost" class="control-label mb-1">Purchased Cost</label>
                                            <input id="purchased_cost" name="purchased_cost" type="number" value="<%= commodity.purchased_cost %>"
                                                class="form-control" aria-required="true" aria-invalid="false">
                                        </div>
    
    
                                        <div class="form-group">
                                            <label for="customer Name" class="control-label mb-1">Customer Name</label>
                                            <input id="customer_name" name="customer_name" type="text" value="<%= commodity.customer_name %>" class="form-control"
                                                aria-required="true" aria-invalid="false">
                                        </div>
    
    
    
                                        <div class="form-group">
                                            <label for="phone No" class="control-label mb-1">Phone Number</label>
                                            <input id="phone_no" name="phone_no" type="number" value="<%= commodity.phone_no %>" class="form-control"
                                                aria-required="true" aria-invalid="false">
                                        </div>
    
                                        <div class="form-group">
                                            <label for="commodity" class="control-label mb-1">Commodity</label>
                                            <input id="commodity" name="commodity" type="text" class="form-control" value="<%= commodity.commodity %>"
                                                aria-required="true" aria-invalid="false">
                                        </div>
    
                                        <div class="form-group">
                                            <label for="commodity" class="control-label mb-1">Commodity Size</label>
                                            <select name="commodity_size" id="commodity_size" class="form-control" required>
                                                <option value="<%= commodity.commodity_size %>" selected><%=commodity.commodity_size%></option>
                                                <option value="small">Small</option>
                                                <option value="medium">Medium</option>
                                                <option value="large">Large</option>
                                                <option value="x-large">Extra Large</option>
                                            </select>
                                        </div>
    
                                        <div class="form-group">
                                            <label for="commodity color" class="control-label mb-1">Commodity Color</label>
                                            <input id="commodity_color" name="commodity_color" type="text" value="<%= commodity.commodity_color %>" placeholder="yellow, Green"
                                                class="form-control" aria-required="true" aria-invalid="false">
                                        </div>
    
                                        <div class="form-group">
                                            <label for="sales date" class="control-label mb-1">Sales Date</label>
                                            <input id="sales_date" name="sales_date" type="date" class="form-control" value="<%= commodity.sales_date %>"
                                                aria-required="true" aria-invalid="false">
                                        </div>
    
                                        <div class="form-group">
                                            <label for="sales cost" class="control-label mb-1">Sales Cost</label>
                                            <input id="sales_cost" name="sales_cost" type="number" class="form-control" value="<%= commodity.sales_cost %>"
                                                aria-required="true" aria-invalid="false">
                                        </div>
    
                                        <div class="form-group">
                                            <label for="purchasing gender" class="control-label mb-1">Purchasing Gender</label>
                                            <select name="purchasing_gender" id="purchasing_gender" class="form-control" value="<%= commodity.purchasing_gender %>" required>
                                                <option value="male" selected>Male</option>
                                                <option value="female">Female</option>
                                            </select>
                                        </div>
    
                                        <div class="form-group">
                                            <label for="mode payment" class="control-label mb-1">Mode of Payment</label>
                                            <input id="mode_payment" name="mode_payment" type="text" class="form-control" value="<%= commodity.mode_payment %>"
                                                aria-required="true" aria-invalid="false">
                                        </div>
    
                                        <div class="form-group">
                                            <label for="delivery location" class="control-label mb-1">Delivery
                                                Location</label>
                                            <input id="delivery_location" name="delivery_location" type="text" value="<%= commodity.delivery_location %>"
                                                class="form-control" aria-required="true" aria-invalid="false">
                                        </div>
    
                                        <div class="form-group">
                                            <label for="mode transaction" class="control-label mb-1">Mode of
                                                Transaction</label>
                                            <input id="mode_transaction" name="mode_transaction" type="text" value="<%= commodity.mode_transaction %>"
                                                class="form-control" aria-required="true" aria-invalid="false">
                                        </div>
    
                                        <div class="form-group">
                                            <label for="advertising medium" class="control-label mb-1">Advertising
                                                Medium</label>
                                            <input id="advertising_medium" name="advertising_medium" type="text" value="<%= commodity.advertising_medium %>"
                                                class="form-control" aria-required="true" aria-invalid="false">
                                        </div>
    
                                        <div class="form-group">
                                            <label for="status" class="control-label mb-1">Status</label>
                                            <input id="status" name="status" type="text" class="form-control" value="<%= commodity.status %>"
                                                aria-required="true" aria-invalid="false">
                                        </div>

                                        <div>
                                            <button id="payment-button" type="submit"
                                                class="btn btn-lg btn-info btn-block">
                                                <span id="payment-button-amount">Update Record</span>
                                                <span id="payment-button-sending" style="display:none;">Sending…</span>
                                            </button>
                                        </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="copyright">
                            <p>Copyright © 2022. All rights reserved. <a href="https://dechconsult.com">Dech Consult
                                    Limited</a>.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        document.getElementById("purchased_cost").onblur = function () {
            this.value = parseFloat(this.value.replace(/,/g, ""))
                .toFixed(2)
                .toString()
                .replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }

        document.getElementById("sales_cost").onblur = function () {
            this.value = parseFloat(this.value.replace(/,/g, ""))
                .toFixed(2)
                .toString()
                .replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }
    </script>
    <%- include('../includes/footer.ejs') %>