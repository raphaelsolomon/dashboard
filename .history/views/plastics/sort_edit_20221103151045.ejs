<%- include('../includes/header.ejs') %>

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">Sorting</div>
                            <div class="card-body">
                                <div class="card-title">
                                    <h3 class="text-center title-2">EDIT PLASTIC DATA SORTING</h3>
                                </div>
                                <hr>
                                <form action="/sort-update" method="post">

                                    <input type="hidden" name="id

                                    <div class="col-12 col-md-12">
                                        <div class="col col-md-3">
                                            <label for="date" class=" form-control-label">Date</label>
                                        </div>

                                        <input id="date" name="date" type="date"  class="form-control" value="<%= data.date %>"
                                            aria-required="true" aria-invalid="false"> <br>
                                    </div>

                                    <div class="col-12 col-md-12">
                                        <div class="col col-md-3">
                                            <label for="tonnage" class=" form-control-label">Sorted Pet Plastic Weight</label>
                                        </div>

                                        <select onchange="sw_other_select(this.selectedIndex)" name="plastic_weight" id="select" class="form-control" required>
                                            <%
                                            var options = [ "200kg", "100kg", "50kg", "10kg", "unknown", "other" ];
                                            for ( var i = 0; i < options.length; i++ )
                                            {
                                                var selected = ( data.plastic_weight == i ) ? "selected" : "";
                                                %><option value="<%=options[ i ] %>" <%=selected %>><%=options[i] %></option><%
                                            }
                                            %>
                                        </select><br>

                                        <input id="sw_other" value="<%= data.other_plastic_weight %>" type="text" name="other_plastic_weight" class="form-control" aria-required="true" aria-invalid="false">
                                    </div>

                                    <div class="col-12 col-md-12">
                                        <div class="col col-md-3">
                                            <label for="tonnage" class=" form-control-label">Sorted Data</label>
                                        </div>

                                        <select onchange="sc_other_select(this.selectedIndex)" name="cap_label" id="select" class="form-control" required>
                                            <%
                                            var options = [ "color", "caps", "labels", "unknown", "other" ];
                                            for ( var i = 0; i < options.length; i++ )
                                            {
                                                var selected = ( data.cap_label == i ) ? "selected" : "";
                                                %><option value="<%=options[ i ] %>" <%=selected %>><%=options[i] %></option><%
                                            }
                                            %>
                                        </select><br>

                                        <input id="sc_other" value="<%= data.other_cap_label %>" type="text" name="other_cap_label" class="form-control" aria-required="true" aria-invalid="false">
                                    </div>

                                    <div class="col-12 col-md-12">
                                        <div class="col col-md-3">
                                            <label for="tonnage" class=" form-control-label">Sorted Color-Caps-labels</label>
                                        </div>

                                        <select onchange="color_other_select(this.selectedIndex)" name="plastic_color" id="select" class="form-control" required>
                                            <%
                                            var options = [ "white", "blue", "green", "black", "unknown", "other" ];
                                            for ( var i = 0; i < options.length; i++ )
                                            {
                                                var selected = ( data.cap_label == i ) ? "selected" : "";
                                                %><option value="<%=options[ i ] %>" <%=selected %>><%=options[i] %></option><%
                                            }
                                            %>
                                        </select><br>

                                        <input id="color_other" value="<%= data.other_plastic_color %>" type="text" name="other_plastic_color" class="form-control" aria-required="true" aria-invalid="false">
                                    </div>

                                    <div class="col-12 col-md-12">
                                        <div class="col col-md-3">
                                            <label for="date" class=" form-control-label">Unit</label>
                                        </div>

                                        <input id="text" name="unit" type="number" class="form-control" value="<%= data.unit %>"
                                            aria-required="true" aria-invalid="false"> <br>
                                    </div>

                                    <div>
                                        <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                            <span id="payment-button-amount">Update</span>
                                            <span id="payment-button-sending" style="display:none;">Sending…</span>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="copyright">
                            <p>Copyright © 2022. All rights reserved. <a href="https://dechconsult.com">Dech Consult
                                    Limited</a>.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
     
        #sc_other{
            display: none;
            margin-top: 2px;
        }
        #sw_other{
            display: none;
            margin-top: 2px;
        }
        #color_other{
            display: none;
            margin-top: 2px;
        }
       
    </style>

<script>
    function sc_other_select(value) {
        if (value === 4) {
            document.getElementById("sc_other").style.display = 'block';
        }else{
            document.getElementById("sc_other").style.display = 'none';
        }
    }

    function sw_other_select(value) {
        if (value === 5) {
            document.getElementById("sw_other").style.display = 'block';
        }else{
            document.getElementById("sw_other").style.display = 'none';
        }
    }
    function color_other_select(value) {
        if (value === 5) {
            document.getElementById("color_other").style.display = 'block';
        }else{
            document.getElementById("color_other").style.display = 'none';
        }
    }
   



</script>
    




    <%- include('../includes/footer.ejs') %>
