            document.getElementById("hair_styling"),
            document.getElementById("manicure"),
            document.getElementById("pedicure"),

            document.getElementById("make_up"),
            document.getElementById("spa"),
            document.getElementById("hair_cut"),

            document.getElementById("lash"),
            document.getElementById("brows"),
            document.getElementById("micro"),

            document.getElementById("hair_lock"),
            document.getElementById("all_of_the_above")
        ];
        for (var i = 0; i < element.length; i++) {
            element[i].style.display = "none";
        }

        //===================================================
        document.getElementById("female_hair").style.display = "none";
        document.getElementById("male").style.display = "none";

        document.getElementById("brand_powders").style.display = "none";
        document.getElementById("brand_air_conditions").style.display = "none";

        function saloonType(index) {
            if (index == 1) {
                document.getElementById("female_hair").style.display = "none";
                document.getElementById("male").style.display = "block";
                document.getElementById("brand_powders").style.display = "block";
                document.getElementById("brand_air_conditions").style.display = "none";
                for (var i = 0; i < element.length; i++) {
                    if (i === 6 || i === 10) {
                        element[6].style.display = 'block';
                        element[10].style.display = 'block';
                    } else {
                        element[i].style.display = 'none';
                    }
                }
            } else if (index == 2) {
                document.getElementById("female_hair").style.display = "block";
                document.getElementById("male").style.display = "none";
                document.getElementById("brand_powders").style.display = "none";
                document.getElementById("brand_air_conditions").style.display = "block";
                for (var i = 0; i < element.length; i++) {
                    if (i === 6 || i === 10 || i === 11) {
                        element[6].style.display = 'none';
                        element[10].style.display = 'none';
                        element[11].style.display = 'none';
                    } else {
                        element[i].style.display = 'block';
                    }
                }
            } else {
                document.getElementById("female_hair").style.display = "block";
                document.getElementById("male").style.display = "block";
                document.getElementById("brand_powders").style.display = "block";
                document.getElementById("brand_air_conditions").style.display = "block";
                for (var i = 0; i < element.length; i++) {
                    element[i].style.display = "block";
                }
            }
            element[0].style.display = 'block';
        }
    </script>

